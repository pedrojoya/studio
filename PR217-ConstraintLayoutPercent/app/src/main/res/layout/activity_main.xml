<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/top_left"
        android:gravity="center"
        android:text="@string/main_top_left"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/main_top_left_width_percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="@dimen/main_top_height_percent"/>

    <TextView
        android:id="@+id/top_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/top_right"
        android:gravity="center"
        android:text="@string/main_top_right"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/top_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="@dimen/main_top_height_percent"/>

    <TextView
        android:id="@+id/middle_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/middle_left"
        android:gravity="center"
        android:text="@string/main_middle_left"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/top_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/main_middle_left_width_percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="@dimen/main_middle_height_percent"/>

    <TextView
        android:id="@+id/middle_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/middle_right"
        android:gravity="center"
        android:text="@string/main_middle_right"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/top_right"
        app:layout_constraintLeft_toRightOf="@+id/middle_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="@dimen/main_middle_height_percent"/>

    <TextView
        android:id="@+id/bottom_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bottom_left"
        android:gravity="center"
        android:text="@string/main_bottom_left"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/middle_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/main_bottom_left_width_percent"/>

    <TextView
        android:id="@+id/bottom_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bottom_right"
        android:gravity="center"
        android:text="@string/main_bottom_right"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/middle_right"
        app:layout_constraintLeft_toRightOf="@+id/bottom_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>