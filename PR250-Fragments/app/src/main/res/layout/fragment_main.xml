<androidx.core.widget.NestedScrollView
    android:id="@+id/svLorem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:id="@+id/rlRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/main_txtLorem_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="@string/main_lblOption"/>

        <TextView
            android:id="@+id/txtLorem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblOption"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:padding="@dimen/main_txtLorem_padding"
            android:text="@string/main_txtLorem"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

