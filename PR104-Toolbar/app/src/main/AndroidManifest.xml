<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pedrojoya.iessaladillo.es.pr104">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecundaryActivity"
            android:label="@string/title_activity_secundary">
            <!-- Se indica que su actividad padre es la principal para que
                 no haya que especificarlo explícitamente en la navegación -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity">

            </meta-data>
        </activity>
    </application>

</manifest>
