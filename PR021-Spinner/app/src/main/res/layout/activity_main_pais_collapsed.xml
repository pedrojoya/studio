<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/collapsed_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/collapsed_padding"
    android:paddingRight="@dimen/collapsed_padding" >

    <ImageView
        android:id="@+id/imgBandera"
        android:layout_width="@dimen/collapsed_width"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/imgBandera_marginRight"
        android:contentDescription="@string/bandera" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>